                    <div class="singleTrack">
                        <div class="coverAndTitle">
                            <img class="cover"
                                 src="~/assets/images/playlistCovers/raindrops.jpg"
                                 alt="" />
                            <div class="title">
                                <h4 class="name">My Playlist</h4>
                                <p class="author">Me</p>
                            </div>
                        </div>

                        <div class="settings">
                            <a href="" class="editBtn">
                                <img class="btnImg awaiting"
                                     src="~/assets/images/icons/plus.svg"
                                     alt="" />
                                <img class="btnImg done"
