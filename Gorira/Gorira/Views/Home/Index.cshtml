@model HomeVM
@{
    ViewData["Title"] = "Home";
}
<!--Main Start-->
<main id="homeMain">
    <!--Swiper Start-->
    <section class="swiper topSlider">
        <!-- Additional required wrapper -->
        <div class="gradient"></div>
        <div class="swiper-wrapper">
            <!-- Slides -->
            @foreach (Slider slider in Model.Sliders)
            {
                <div class="swiper-slide">
                    <div class="gradient"></div>

                    <a asp-controller="Track" asp-action="Index" class="slide1 slidebtn">@slider.BtnText</a>
                    <div class="slide slidetext">
                        <p>@slider.Text</p>
                    </div>

                    <img src="~/assets/images/slider/@(slider.Image)" alt="" />
                </div>
            }

            
        </div>
    </section>
    <!--Swiper End-->
    <!--Trending Start-->
