@model AppUser
@{
    ViewData["Title"] = "ChangeRole";
    List<string> allRoles = ViewBag.Roles;
}
<div class="content-wrapper">


    <dvi class="row">
        <div class="col-lg-12 mb-5">
          <div class="card">
                <div class ="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>

                                    <th>UserName</th>
                                    <th>Email</th>
                                    <th>Role</th>

                                </tr>
                            </thead>
                            <tbody class="listContainer">
                                <tr>

                                    <td>@Model.UserName</td>
                                    <td>@Model.Email</td>
                                    <td>
                                        @string.Join(",",Model.Roles.Select(x=>x))
                                </tr>
                            </tbody>
                        </table>
                  </div>
              </div>
          </div>
        </div>
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Change Role</h4>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <form method="post" class="forms-sample">
                        <div class="form-group">
                            <label asp-for="Roles">Choose A New Role</label>
                            <select asp-for="Roles" class="roleSelector form-control">
                                @for (int i = 0; i < allRoles.Count; i++)
                                {
                                    <option value="@allRoles[i]">@allRoles[i]</option>
                                }
                            </select>
                            <span asp-validation-for="Roles" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a asp-area="Manage" asp-controller="User" asp-action="Index" class="btn btn-dark">Go back</a>
                    </form>
                </div>

            </div>

        </div>
    </dvi>
</div>