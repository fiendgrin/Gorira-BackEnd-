@model LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Corona Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/manage/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/manage/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/manage/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/manage/images/favicon.png" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="row w-100 m-0">

                <div class="content-wrapper full-page-wrapper d-flex align-items-center auth">
                    <img style="height:100vh; width:100vw; position:absolute; left:0; top:0; object-fit:cover; object-position:center;" src="/assets/images/gif/4.jpg" />
                    <div class="card col-lg-4 mx-auto">
                        <div class="card-body px-5 py-5">
                            <h3 class="card-title text-left mb-3">Login</h3>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <form method="post">
                                <div class="form-group">
                                    <label>Email *</label>
                                    <input asp-for="Email" class="form-control p_input">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label>Password *</label>
                                    <input asp-for="Password" class="form-control p_input">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group d-flex align-items-center justify-content-between">
                                    <div class="form-check form-check-info">
                                        <label class="form-check-label">
                                            <input asp-for="RememberMe" class="form-check-input"> Remember me
                                        </label>
                                    </div>
                                    <a href="#" class="forgot-pass text-info">Forgot password</a>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-info btn-block enter-btn">Login</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- content-wrapper ends -->
            </div>
            <!-- row ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/manage/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/manage/js/off-canvas.js"></script>
    <script src="~/manage/js/hoverable-collapse.js"></script>
    <script src="~/manage/js/misc.js"></script>
    <script src="~/manage/js/settings.js"></script>
    <script src="~/manage/js/todolist.js"></script>
    <!-- endinject -->
</body>
</html>
