@model ReviewSlider
@{
    ViewData["Title"] = "Review Detail";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title" style="color:#b878f0;">Review Slider Detail</h3>
        <a asp-area="Manage" asp-controller="Slider" asp-action="Index" class="btn btn-dark">Go back</a>
    </div>
    <div class="row">


        <div class="col-md-6 col-xl-4 grid-margin stretch-card pb-0">
            <div class="card pb-0">
                <div style="width:100%; padding:10px; align-items:center; justify-content:center;" class="d-flex flex-column">
                    <div class="item">
                        <img style="overflow:auto; width: 405px; height:270px; object-fit:cover; object-position:center; align-self:center; justify-self:center; border:1px solid #b878f0; border-radius:6px;" src="~/assets/images/WhyGorira/@Model.Image" alt="">
                    </div>
                    <h4 class="card-title mt-3 mb-0">Image</h4>
                </div>
            </div>
        </div>


        <div class="col-md-6 col-xl-4 grid-margin stretch-card pb-0">
            <div class="card pb-0">
                <div style="width:100%; padding:10px; align-items:center; justify-content:center;" class="d-flex flex-column">
                    <div class="item">
                        <img style="overflow:auto; width: 405px; height:270px; object-fit:cover; object-position:center; align-self:center; justify-self:center; border:1px solid #b878f0; border-radius:6px;" src="~/assets/images/gif/@Model.BackgroundImage" alt="">
                    </div>
                    <h4 class="card-title mt-3 mb-0">Background Image</h4>
                </div>
            </div>
        </div>



    </div>
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th> Text </th>
                                </tr>
                            </thead>
                            <tbody>

                                <tr>
                                    <td>
                                        @Html.Raw(Model.Text)
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>